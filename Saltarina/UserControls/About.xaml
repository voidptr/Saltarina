<UserControl x:Class="Saltarina.UserControls.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Saltarina.UserControls"
             mc:Ignorable="d" >
    <Grid Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Border BorderThickness="1" BorderBrush="LightGray">
            <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0">
                <ScrollViewer>
                    <TextBlock
                    Padding="5"
                    TextWrapping="Wrap"
                    DockPanel.Dock="Top" 
                    x:Name="AboutBox_Content" 
                   Text="{Binding AboutBoxText, FallbackValue='Fallback About Box', TargetNullValue='Null :('}" />
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
