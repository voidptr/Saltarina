<Window x:Class="Saltarina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saltarina" xmlns:uc="clr-namespace:Saltarina.UserControls" 
        mc:Ignorable="d"
        Title="Saltarina" Height="215" Width="300">
    <Grid>
        <DockPanel>
            <TabControl>
                <TabItem Header="About">
                    <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                        <uc:About DataContext="{Binding AboutViewModel_DataContext}"/>
                    </DockPanel>
                </TabItem>
                <TabItem Header="Settings"/>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
